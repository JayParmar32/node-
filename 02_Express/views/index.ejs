<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Student CRUD</title>
</head>
<body>

<h1>Student CRUD App</h1>

<!-- Insert Form -->
<form action="/insertData" method="post">
  <input type="text" name="id" placeholder="Enter ID" required>
  <input type="text" name="name" placeholder="Enter Name" required>
  <button type="submit" style="padding: 5px; background: #000; color: white; border-radius: 8px;">Add Student</button>
</form>

<br><br>

<!-- Student Table -->
<table border="1" cellpadding="10">
  <tr style="background-color: lightgray;">
    <th>ID</th>
    <th>Name</th>
    <th>Action</th>
  </tr>
  

  
  <% student.map(stu => { %>
    <tr>
      <td><%= stu.id %></td>
      <td><%= stu.name %></td>
      <td>
        <a href="/delete?id=<%= stu.id %>" style="text-decoration: none; color: red;">Delete</a> |
        <a href="/edit?id=<%= stu.id %>" style="text-decoration: none; color: blue;">Edit</a>
      </td>
    </tr>
  <% }) %>

</table>

</body>
</html>
